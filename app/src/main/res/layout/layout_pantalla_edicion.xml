<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActividadEditar">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etNombreYogur"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_aceptar"
            android:id="@+id/botonAceptar"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/boton_cancelar"
            android:id="@+id/botonCancelar"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/botonAceptar"
            android:layout_toEndOf="@+id/botonAceptar"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp" />
    </RelativeLayout>
</LinearLayout>